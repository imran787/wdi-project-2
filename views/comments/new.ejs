


<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Add New Comment to <%# review.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/reviews/<%= review._id %>" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <!--<div class="form-group">-->
        <!--  <input class="form-control" type="text" name="comment[author]" placeholder="author">  -->
        <!--</div>-->

        <form method="POST" action="/reviews/<%= review.id %>/comments">
          <div class="form-group">
            <label for="body">Please leave a comment</label>
            <textarea id="body" name="body" class="form-control"></textarea>
          </div>
          <input type="submit" class="btn">
        </form>
        <ul>
          <% review.comments.forEach(comment => { %>
            <li><a href=""><%= comment.user.username %></a> &middot; <%= comment.body %></li>
            <% }) %>
          </ul>


          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit Comment</button>
          </div>

        </form>
        <a href="/reviews">Go Back</a>
      </div>

    </div>
  </div>
