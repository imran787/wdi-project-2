<h3>Add Review</h3>

<form action="/reviews/<%= review._id %>" method="post">
  <input type="hidden" name="_method" value="PUT">
  <label for="title">Film Title</label>
  <input type="text" name="title" id="title" value="<%= review.title %>">

  <label for="genre">Film Genre</label>
  <input type="text" name="genre" id="genre" value="<%= review.genre %>">

  <label for="review">Review</label>
  <textarea name="review" id="review"><%= review.review %></textarea>

  <label for="rating">Rating</label>
  <input type="text" name="rating" id="rating" value="<%= review.rating %>">

  <input type="submit" value="submit">

</form>
